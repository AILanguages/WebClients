@{
    Layout = "~/Views/Shared/_ConsoleLayout.cshtml";
}
@model  TSTuring2015.ScreenModels.FullScreenModels.FullNounScreenModel

<div id="@Model.CssScreen">
    
    <div id="simplenountop">
        <div class="simpletophalf">
            <span class="LeftMenuLabel left">@Model.Top.MatchedText.Title</span>
            <textarea class="basestyle widthtextin left" wrap="soft" readonly="readonly">@Model.Top.MatchedText.Text</textarea>
        </div>
    </div>

    <div id="clausefull">
        @if (@Model.Nucleus != null)
        {
            if (@Model.Nucleus.Matches != "")
            {
                @Html.Partial("Partials/LogicalStructure", Model)
            }
        }

        @Html.Partial("SimplePartials/SimpleNounHeading", Model)

        @if (@Model.Nucleus != null)
        {
            <p class="blackseparator">
                &uArr; The noun 'head' is above. Clause relations are below.&dArr;
            </p>

            if (Model.Nucleus.Matches != "")
            {
                @Html.Partial("SimplePartials/SimpleClauseCore", Model)
            }
        }
    </div>
</div>
